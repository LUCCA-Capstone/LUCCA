{% extends '_layout.njk' %}

{% block description %}
<meta name="description" content="User Management Edit a User/Station">
{% endblock %}

{% block title %}
<title>LUCCA User Management Edit</title>
{% endblock %}

{% block customCSS %}
<link rel="stylesheet" href="/stylesheets/userManagement.css">
{% endblock %}

{% block content %}
{# User Information Table #}
<div class="container mb-5 pb-5">
<div class="row">
    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
        <div class="table-responsive">
            <table  class="table table-bordered">
                <tr>
                    <th>Name</th>
                    <td>{{user.first}} {{user.last}}</td>
                </tr>
                <tr>
                    <th>Badge ID</th>
                    <td>{{user.badge}}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{user.email}}</td>
                </tr>
                <tr>
                    <th>Phone</th>
                    <td>{{user.phone}}</td>
                </tr>
                <tr>
                    <th>Signature</th>
                    <td>{{user.signature}}</td>
                </tr>
                <tr>
                    <th>Parent/Guardian signature</th>
                    <td>{{user.ecSignature}}</td>
                </tr>
                <tr>
                    <th>Emergency contact name</th>
                    <td>{{user.ecName}}</td>
                </tr>
                <tr>
                    <th>Emergency relationship</th>
                    <td>{{user.ecRel}}</td>
                </tr>
                <tr>
                    <th>Emergency phone number</th>
                    <td>{{user.ecPhone}}</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>{{user.status}}</td>
                </tr>
                <tr>
                    <th>Last seen: </th>
                    <td>{{user.updatedAt}}</td>
                </tr>
                <tr>
                    <th>Date registered: </th>
                    <td>{{user.createdAt}}</td>
                </tr>
                <tr>
                    <th></th>
                    {% if user.confirmation  %}
                        <td>
                            <form id="deleteForm" action="/userManagement/deleteUser/{{user.badge}}" method="post" onsubmit="return confirm('This user will be deleted!')">
                            <button type='submit' class="btn btn-primary" name='submit' value="">Delete</button>
                            </form>
                        {% if user.status == "User"%}
                            <br> 
                            <form id="ChangeStatusToManager" action="/userManagement/promoteUser/{{user.badge}}" method="post" onsubmit="return confirm('This user will be Manager!')">        
                            <button type='submit' class="btn btn-primary" name='submit' value="">Promote to Manager</button>
                            </form>
                        {% elif user.status == "Manager" %}
                            <br>
                            <form id="ChangeStatusToManager" action="/userManagement/demoteManager/{{user.badge}}" method="post" onsubmit="return confirm('This user will be User!')">
                            <button type='submit' class="btn btn-primary" name='submit' value="">Demote to User</button>
                            </form>
                        {% endif %}
                                
                        </td>
                    {% else %}
                        <td>
                            <form id="validateForm" action="/userManagement/confirmUser/{{user.badge}}" method="post" onsubmit="return confirm('This user will be validated!')">
                            <button type='submit' class="btn btn-primary" name='submit' value="">Validate</button>
                            </form>
                        </td>
                    {% endif %}
                </tr>
                    {% if user.loggedIn %}
                    <tr>
                    <th></th>
                        <td>
                        <form id="BadgeOutUser" action="/userManagement/badgeOutUser/{{user.badge}}" method="post">
                        <button type='submit' class="btn btn-primary" name='submit' value="">Badge Out</button>
                        </form>
                        </td>
                    </tr>    
                    {% endif %}
            </table>
        </div>
    </div>

{# Station listing #}
    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
        <div class="table-responsive">
            <table  class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col" nowrap="nowrap">Station ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Status</th>
                        <th scope="col" nowrap="nowrap">Trained on</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for station in allStations %}
                    <tr>
                        <td>{{station.sId}}</td>
                        <td>{{station.name}}</td>
                        <td>{{station.description}}</td>
                        {% if station.trained %}
                            <td>Trained</td>
                            <td>{{station.trainedDate}}</td>
                            <td>
                                <form id="revokePrivForm" action="/userManagement/deletePrivilege/{{user.badge}}/{{station.sId}}" method="post" onsubmit="return confirm('This user will be revoked access to {{station.name}}!')">
                                <button type='submit' class="btn btn-primary" name='submit' value="">Revoke</button> 
                                </form>
                            </td>
                        {% else %}
                            <td>Not Trained</td>
                            <td>---</td>
                            <td>
                                <form id="grantPrivForm" action="/userManagement/grantPrivilege/{{user.badge}}/{{station.sId}}" method="post" onsubmit="return confirm('This user will be granted access to {{station.name}}!')">
                                <button type='submit' class="btn btn-primary" name='submit' value="">Grant Access</button>
                                </form>
                            </td>
                        {% endif %}
                    </tr>
                    {% endfor %}  
                </tbody>
            </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

