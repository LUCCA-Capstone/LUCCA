<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- description block used to provider meta tag to describe page -->
    {% block description %}{% endblock %}
    <meta name="author" content="PSU Capstone F2017">
    <!-- title block to list title of page to be displayed in browser tab -->
    {% block title %}{% endblock %}

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css" integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy" crossorigin="anonymous">

    <!-- Custom styles for this template -->
    {% block customCSS %}
    <link rel="stylesheet" href="/stylesheets/style.css">
    {% endblock %}
  </head>

  <body>
    {% block navbar %}
      <nav class="navbar sticky-top navbar-expand-md navbar-dark bg-dark mb-4">
        <div class="container-fluid">
          <div class="navbar-header">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" href="#">EPL WEB APP</a>
          </div> <!--navbar-header-->

          <!-- Collect the nav links and content for toggling -->
          <!-- Each navbar button is its own block so child-pages can denote which is "active" -->
          <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
              {% block Home %}
              <li class="nav-item">
                <a class="nav-link" href="/">Home</a>
              </li>
              {% endblock %}

              {% block Badgein %}
              <li class="nav-item">
                <a class="nav-link" href="/badgein">Badge-in</a>
              </li>
              {% endblock %}

              {% block AdminLogin %}
              <li class="nav-item">
                  <a class="nav-link" href="/adminLogin">Admin Login</a>
              </li>
              {% endblock %}

              <!-- The adminManagement block should only be displayed (inherited) if an admin "session" is active -->
              {% block adminManagement %}
              <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" href="#" id="dropdown10" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Management</a>
                  <div class="dropdown-menu" aria-labelledby="dropdown10">
                    <a class="dropdown-item" href="/userManagement">User</a>
                    <a class="dropdown-item" href="/stationManagement/all">Station</a>
                  </div>
              </li>
              <li class="nav-item">
                  <a class="nav-link" href="#">Log Out</a>
              </li>
              {% endblock %} <!-- /end adminManagment block -->

            </ul> <!-- /navbar-nav mr-auto -->
          </div> <!-- /navbarCollapse -->
        </div> <!-- /container-fluid-->
      </nav>
    {% endblock %} <!-- /end navbar block -->

    <!-- container for displaying alert messages to the user -->
    <div class="container">
      {% block alerts %}      
        <div class="container">
          <div class="row">
            <div class="col-lg-6 mx-auto">
              <div id="alertError" class="alert alert-danger collapse">
                <a href="#" id="closeError" class="close">&times;</a>
                <strong>Error:</strong> {{message}}
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-6 mx-auto">
              <div id="alertSuccess" class="alert alert-success collapse">
                <a href="#" id="closeSuccess" class="close">&times;</a>
                <strong>Success:</strong> {{message}}
              </div>
            </div>
          </div>
        </div> <!-- /alerts container -->
      {% endblock %}

    <div class="container">
      <!-- Add body from child in this "content" block -->
      {% block content %}
      {% endblock %}
    </div> <!-- /container -->

    <!-- Footer will contain copyright and/or licence information etc. -->
    {% block footer %}
      <footer class="footer fixed-bottom navbar-dark bg-dark">
        <div class="container">
          <p class="text-muted text-strong">Copyright (c) information and other stuff</p>
        </div>
      </footer>
    {% endblock %}
    
    {% block scripts %}
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/js/bootstrap.min.js" integrity="sha384-a5N7Y/aK3qNeh15eJKGWxsqtnX/wWdSZSKp+81YjTmS15nvnvxKHuzaWwXHDli+4" crossorigin="anonymous"></script>
    {% endblock %}
    
    {% block alertScripts %}
      <script>
        //messagePassing function shows alert message that is passed into DOM from router.
        //  User can manually dismiss or will auto close after 3 seconds.
        //parameters: elementId - id of the html page element to be shown/hidden.
        //            closeId   - id of the button element exposed to user to manually dismiss message.
        function messagePassing (elementId, closeId) {
          $(elementId).fadeIn("slow");

          setTimeout(function () {
            $(elementId).fadeOut("slow");
          }, 3000);

          $(clodeId).click(function () {
            $(elementId).fadeOut("slow");
          });
        }
      </script>

      {% if messageType === "error" %}
        <script>messagePassing('#alertError', '#closeError');</script>
      {% elseif messageType === "success" %}
        <script>messagePassing('#alertSuccess', '#closeSuccess');</script>
      {% endif %}
    {% endblock %}

  </body>
</html>