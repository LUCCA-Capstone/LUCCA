<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- description block used to provider meta tag to describe page -->
    {% block description %}{% endblock %}
    <meta name="author" content="PSU Capstone F2017">
    <!-- title block to list title of page to be displayed in browser tab -->
    {% block title %}{% endblock %}

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css" integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy" crossorigin="anonymous">

    <!-- Custom styles for this template -->
    {% block customCSS %}
    <link rel="stylesheet" href="stylesheets/style.css">
    {% endblock %}
  </head>

  <body>

      <!-- Temporary top navigation bar until permanent one is implemented -->
      {% block navbar %}
        <nav class="navbar navbar-fixed-top navbar-expand-md navbar-dark bg-dark mb-4">
        <div class="container-fluid">
          <div class="navbar-header">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" href="#">LUCCA (config. brand?)</a>
          </div> <!--navbar-header-->

          <!-- Collect the nav links and content for toggling -->
          <!-- Each navbar button is its own block so child-pages can denote which is "active" -->
          <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
              {% block Home %}
              <li class="nav-item">
                <a class="nav-link" href="#">Home</a>
              </li>
              {% endblock %}

              {% block Badgein %}
              <li class="nav-item">
                <a class="nav-link" href="#">Badge-in</a>
              </li>
              {% endblock %}

              {% block AdminLogin %}
              <li class="nav-item">
                  <a class="nav-link" href="#">Admin Login</a>
              </li>
              {% endblock %}

              <!-- The adminManagement block should only be displayed (inherited) if an admin "session" is active -->
              {% block adminManagement %}
              <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" href="#" id="dropdown10" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Management</a>
                  <div class="dropdown-menu" aria-labelledby="dropdown10">
                    <a class="dropdown-item" href="#">User</a>
                    <a class="dropdown-item" href="#">Station</a>
                  </div>
              </li>
              <li class="nav-item">
                  <a class="nav-link" href="#">Log Out</a>
              </li>
              {% endblock %} <!-- /end adminManagment block -->

            </ul> <!-- /navbar-nav mr-auto -->
          </div> <!-- /navbarCollapse -->
        </div> <!-- /container-fluid-->
        </nav>
        {% endblock %} <!-- /end navbar block -->

    <div class="container">
      <!-- Add body content from child in this block -->
      {% block content %}{% endblock %}
    </div> <!-- /container -->

    <!-- Footer will contain copyright and/or licence information etc. -->
    {% block footer %}
        <footer class="footer fixed-bottom navbar-dark bg-dark">
            <div class="container">
                <p class="text-muted text-strong">Copyright (c) information and other stuff</p>
            </div>
        </footer>
    {% endblock %}
    
    {% block scripts %}
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/js/bootstrap.min.js" integrity="sha384-a5N7Y/aK3qNeh15eJKGWxsqtnX/wWdSZSKp+81YjTmS15nvnvxKHuzaWwXHDli+4" crossorigin="anonymous"></script>
    {% endblock %}

  </body>
</html>